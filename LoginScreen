def show_login():
    st.set_page_config(page_title="Sign On", layout="centered")

    st.markdown("""
        <style>
        body {
            background: linear-gradient(160deg, #dbeafe, #c084fc);
        }
        .login-container {
            max-width: 350px;
            margin: auto;
            margin-top: 80px;
            padding: 2rem;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .logo-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: #6d28d9;
            margin-bottom: 0.5rem;
        }
        .greeting {
            font-size: 1.2rem;
            color: #4b5563;
            margin-bottom: 1.5rem;
        }
        .stTextInput>div>input {
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 10px;
        }
        .stButton>button {
            background-color: #6d28d9;
            color: white;
            font-weight: bold;
            padding: 0.75rem;
            border-radius: 10px;
            width: 100%;
            font-size: 1.1rem;
            margin-top: 1rem;
        }
        </style>

        <div class="login-container">
            <div class="logo-text">WELLS FARGO</div>
            <div class="greeting">Good morning ðŸ‘‹</div>
    """, unsafe_allow_html=True)

    with st.container():
        username = st.text_input("Username", placeholder="Enter your username")
        password = st.text_input("Password", placeholder="Enter your password", type="password")

        if st.button("Sign On"):
            if username in USER_CREDENTIALS and USER_CREDENTIALS[username] == password:
                st.session_state.logged_in = True
                st.session_state.username = username
                st.experimental_rerun()
            else:
                st.error("Invalid username or password")

    # Close the open <div> tag from HTML above
    st.markdown("</div>", unsafe_allow_html=True)
